{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch (Chromium)",
			"type": "chrome",
			"request": "launch",
			"preLaunchTask": "Build Html5",
			"file": "${workspaceRoot}/build/html5/index.html",
			"runtimeExecutable": "chromium-browser",
			"linux": {
				"runtimeExecutable": "/usr/bin/chromium-browser",
				"runtimeArgs": [ "--password-store=basic" ]
			},
			"timeout": 100000,
			"sourceMaps": true
		},
		{
			"name": "Launch (Hxcpp)",
			"type": "hxcpp",
			"request": "launch",
			"preLaunchTask": "Build C++ debug",
			"linux": { 
				"cwd": "${workspaceRoot}/build/linux",
				"program": "${workspaceRoot}/build/linux/Main" },
			"windows": {
				"cwd": "${workspaceRoot}/build/windows",
				"program": "${workspaceRoot}/build/windows/Main.exe"
			}
		},
		{
			"name": "Attach (Hxcpp)",
			"type": "hxcpp",
			"request": "attach",
			"processId": "${command:pickProcess}"
		}
	]
}
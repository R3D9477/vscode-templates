{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "linux": { "program": "${workspaceRoot}/bin/debug/main" },
            "windows": { "program": "${workspaceRoot}/bin/debug/main" },
            "cwd": "${workspaceRoot}/bin",
            "MIMode": "gdb"
        },
        {
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "linux": { "program": "${workspaceRoot}/bin/debug/main" },
            "windows": { "program": "${workspaceRoot}/bin/debug/main" },
            "processId": "${command:pickProcess}",
            "MIMode": "gdb"
        }
    ]
}

{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch (Hxcpp)",
			"type": "hxcpp",
			"request": "launch",
			"preLaunchTask": "Build C++ debug",
			"linux": {
				"args": [
					"runPath=${workspaceRoot}/Export/cpp/debug",
					"runCommand=Main-debug",
					"runInTerminal=true"
				]
			},
			"osx": {
				"args": [
					"runPath=${workspaceRoot}/Export/cpp/debug",
					"runCommand=Main-debug",
					"runInTerminal=true"
				]
			},
			"windows": {
				"args": [
					"runPath=${workspaceRoot}/Export/cpp/debug",
					"runCommand=Main-debug.exe",
					"runInTerminal=false"
				]
			}
		}
	]
}